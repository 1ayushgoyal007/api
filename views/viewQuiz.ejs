<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View All Quiz</title>
    <link rel="stylesheet" 
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
    crossorigin="anonymous">
    <link rel="stylesheet" href="css/theme.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    
    <h1 style="text-align: center;"> Your Total Quiz: <%= data.length %></h1>


    <% for( var i=0; i<data.length ; i++){ %>
        <div class="each" >
            <h2>Quiz title :  <%= data[i].title %></h2>
            <h2>Quiz Posted by:  <%= data[i].name %></h2>
            <h2>Quiz Total Questions:  <%= data[i].questions.length %></h2>

            <% for(var j=0  ; j<data[i].questions.length; j++){ %>
                
                <div>
                    <h2>Question: <%= j+1 %></h2>
                    <span>Options: <%= data[i].questions[j].options %></span>
                    <p>Question:  <%= data[i].questions[j].question %></p>
                    <p>Answer: <%= data[i].questions[j].answer %></p>
                </div>
            <% } %>
            <form method="POST" action="/viewQuiz/<%= data[i]._id%>?_method=DELETE" >
                <button class="btn btn-danger" >Delete</button>
            </form>
        </div>
    <% } %>

    <div class="all-links" >
        <a href="/quiz">Add More Quiz</a>
    </div>
</body>
</html>